{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/tsconfig.test.json"
    }
  },
  "setupFilesAfterEnv": ["<rootDir>/test/jest-e2e.setup.ts"],
  "testEnvironment": "node"
}
